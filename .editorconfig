# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# JavaScript/TypeScript 文件
[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

# HTML 文件
[*.html]
indent_size = 2

# CSS/SCSS 文件
[*.{css,scss,sass,less}]
indent_size = 2
